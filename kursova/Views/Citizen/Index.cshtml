@model List<kursova.Data.Citizen>

@{ViewData["Title"] = "Citizens";}
<h1>Citizens</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Citizen" asp-action="Add"><b>&#65291</b>  Add Citizen</a>
<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Number</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var citizen in Model)
        {
            <tr>
                <td>@citizen.Id</td>
                <td>@citizen.FirstName</td>
                <td>@citizen.LastName</td>
                <td>@citizen.PhoneNumber</td>
                <td><a href="Citizen/View/@citizen.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
